<%= bootstrap_form_for @reward do |f| %>
  
  <% if @reward.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@reward.errors.count, "error") %> prohibited
    this reward from being created:</h2>
  
    <ul>
    <% @reward.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <div class="panel">
    <div class="panel-body">
      <p>
        <%= f.text_field :title %>
        <%= f.text_area :description %>
        <%= f.number_field :reward %>
        <%= f.select :target_unit, ["Calories", "Steps", "Miles"], label: "Category" %>
        <%= f.number_field :goal, label: "Target Goal" %>
        <%= f.select :period, ["24-Hours", "Month"], label: "Period" %>
        <%= f.text_field :company, hide_label: true, class: "hidden hidden-lg hidden-md hidden-sm hidden-xs" %>
        <%= f.submit "Create", class: "btn btn-success btn-block"%>
      </p>
    </div>
  </div>
<% end %>  