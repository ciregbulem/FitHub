<div id="add-email" class="container">
  <div class="col-lg-10">
  <h1>Edit Account Info</h1>
  <%= bootstrap_form_for(current_user, :as => 'user', :url => finish_signup_path(current_user), :html => { role: 'form'}) do |f| %>
    <% if @show_errors && current_user.errors.any? %>
      <div id="error_explanation">
        <% current_user.errors.full_messages.each do |msg| %>
          <%= msg %><br>
        <% end %>
      </div>
    <% end %>
    <div class="form-group">
      <div class="controls">
        <%= f.text_field :fname, :autofocus => true, placeholder: "First Name", class: " input-lg", label: "First Name" %>
        <%= f.text_field :lname, placeholder: "Last Name", class: "input-lg", label: "Last Name" %> 
        <%= f.email_field :email, class: 'form-control input-lg', placeholder: 'Example: email@me.com' %>
        <p class="help-block">Please confirm your email address. No spam.</p>
      </div>
    </div>
    <div class="actions">
      <%= f.submit 'Continue', :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>